<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyWThR" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:actionBarSize">30dp</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <!-- <item name="android:windowTranslucentStatus">true</item> -->
   </style>

   <style name="Widget.mywthr.Toolbar" parent="Widget.AppCompat.Toolbar">
       <item name="android:background">?attr/colorPrimary</item>
       <item name="android:theme">@style/Theme.MyWThR</item>
       <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
   </style>


   <style name="TextAppearance.mywthr.subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
       <item name="android:textSize">16sp</item>
       <item name="android:textColor">@color/textColorSecondary</item>
   </style>

   <style name="TextAppearance.mywthr.headline5" parent="TextAppearance.MaterialComponents.Headline5">
       <item name="android:textColor">@color/textColorPrimary</item>
       <item name="android:textStyle">bold</item>
   </style>

    <style name="TextAppearance.mywthr.subtitle.old" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextAppearance.mywthr.headline5.old" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>